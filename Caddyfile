{
    admin localhost:2019
    auto_https off 
}

:8000 {
    log {
        output stdout
        format json
    }

    # 1. Static Route for the main domain
    @admin_host host admin.nepdora.com
    handle @admin_host {
        reverse_proxy localhost:8001
    }

    # 2. Add an explicit error handler at the end.
    #    This is only reached if no previous route (including API-injected ones) matched.
    handle_errors {
        @404 status 404
        respond @404 "Sales CRM Gateway: Route not found for {host}" 404
    }
}